<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>


<% if @book.errors.any? %>
<h3><%= @book.errors.count %>"errors prohibited this obj from being saved:"</h3>
<% end %>


<%= render partial: 'shared/sample', locals: { book: @book, user: @user } %>
<div class="col-md-7">
<h3>Books</h3>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Books</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<th><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, size: '40x40' %><% end %></th>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
			<% end %>
		</tr>

	</tbody>
</table>
</div>



